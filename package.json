{
  "name": "@mindsend/kadena-snap-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "MetaMask snap monorepo for managing Kadena accounts and KDA tokens",
  "homepage": "https://github.com/mindsend-datatech/kadena-snap#readme",
  "bugs": {
    "url": "https://github.com/mindsend-datatech/kadena-snap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindsend-datatech/kadena-snap.git"
  },
  "license": "BSD-3-Clause",
  "author": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A --parallel --topological --verbose run build",
    "build:site": "yarn workspace site run build",
    "install-chrome": "./scripts/install-chrome.sh",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!**/CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "start": "yarn workspaces foreach -A --parallel --interlaced --verbose run start",
    "test": "yarn workspaces foreach -A --parallel --verbose run test"
  },
  "devDependencies": {
    "@metamask/eslint-config": "^14.0.0",
    "@metamask/eslint-config-jest": "^14.0.0",
    "@metamask/eslint-config-nodejs": "^14.0.0",
    "@metamask/eslint-config-typescript": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.18",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "bignumber.js": "^9.3.1",
    "moment": "^2.30.1"
  }
}
